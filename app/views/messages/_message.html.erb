<div class="message-box">
  <div class="message-info">
    <div class="message-name">
      <%= message.user.name %>
    </div>
    <div class="message-time">
      <%= message.created_at %>
    </div>
  </div>
  <div class="message-content">
    <div class="message">
      <%= message.content %>
    </div>
  </div>
</div>